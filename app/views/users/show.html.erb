<h1>Viewing Party Lite</h1>
<h2><%= "#{@user.name}'s Dashboard" %></h2>

<%= button_to "Discover Movies", discover_index_path, method: :get %>

<hr>
<h3>Viewing Parties</h3>

<% @party_users.each do |party_user| %>
    <p><%= party_user.party_movie.title %></p>
    <p><%= party_user.party.date.strftime("%m-%d-%Y") %></p>
    <p><%= party_user.party.start_time.strftime("%I:%M %p") %></p>
    <p><%= party_user.status %></p>
    <p><%= image_tag(party_user.party_movie.poster_path, alt: "#{party_user.party_movie.title} - Movie Poster")%></p>
<% end %>