<h1>Viewing Party Lite</h1>
<h2>Discover Movies</h2>

<%= button_to "Top Rated Movies", movies_path, method: :get, params: {filter: 'top_rated'} %>

<p>OR</p>

<%= form_with url: movies_path, method: :get, local: true do |f| %>
    <%= f.label :filter, "Search by Title" %>
    <%= f.text_field :filter %>
    <%= f.submit :search%>
<% end %>